{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend do sistema de chat",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "staging": "cross-env NODE_ENV=staging node server.js",
    "prod": "cross-env NODE_ENV=production node server.js",
    "dev:env": "node -r dotenv/config server.js dotenv_config_path=.env.development",
    "staging:env": "node -r dotenv/config server.js dotenv_config_path=.env.staging",
    "prod:env": "node -r dotenv/config server.js dotenv_config_path=.env.production",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "seed": "node seeds/run-all-seeds.js",
    "seed:tenant": "node seeds/001-tenant-default.js",
    "seed:migrate": "node seeds/002-migrate-existing-data.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:mocha": "mocha tests/**/*.test.js --timeout 10000"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",

# PRODUCTION ENVIRONMENT
NODE_ENV=production
PORT=80

# MongoDB Atlas (database isolado para produção)
MONGODB_URI=${MONGODB_URI_PROD}

# JWT
JWT_SECRET=[JWT_SECRET_HASH]
JWT_EXPIRE=7d

# CORS - Configurar para o domínio de produção
CLIENT_URL=https://suporte.brsi.net.br
CORS_ORIGIN=https://suporte.brsi.net.br

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_TIMEOUT=3600000

# URL Base da API
API_URL=https://suporte.brsi.net.br/api

# Storage
USE_S3=false

# Debug
DEBUG=false
LOG_LEVEL=error
